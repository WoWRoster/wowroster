# ONLY IF MOD_REWRITE IS INSTALLED
<IfModule mod_rewrite.c>
# ENABLE ENGINE
RewriteEngine On

# CONIDITIONS
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d

# REWRITE RULES
RewriteRule ^(.+) - [PT,L]
RewriteRule ^(.*) index.php
</IfModule>
